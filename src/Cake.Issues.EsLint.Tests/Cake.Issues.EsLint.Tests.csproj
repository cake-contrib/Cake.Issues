    <Description>Tests for the Cake.Issues.EsLint addin</Description>
    <Authors>BBT Software AG</Authors>
    <Company>BBT Software AG</Company>
  </PropertyGroup>


  <PropertyGroup>
    <CodeAnalysisRuleSet>..\Cake.Issues.EsLint.Tests.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>


  <ItemGroup>
